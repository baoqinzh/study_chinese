<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:textSize="24sp"
    tools:context="baoqin.study_chinese.GroupActivity">


    <ImageButton
        android:id="@+id/imgButtonSound"
        style="@android:style/Widget.Holo.ImageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:background="@drawable/bg_color_primary_dark"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/speaker"></ImageButton>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/imgButtonSound"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.561">

        <TextView
            android:id="@+id/displayName4"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_color_primary"
            android:drawingCacheQuality="auto"
            android:text="Text"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textSize="35sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/displayName5"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_color_primary"
            android:drawingCacheQuality="auto"
            android:text="Text"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textSize="35sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">


        <TextView
            android:id="@+id/displayName1"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_color_primary"
            android:drawingCacheQuality="auto"
            android:text="Text"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textSize="35sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/displayName2"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_color_primary"
            android:drawingCacheQuality="auto"
            android:text="Text"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textSize="35sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/displayName3"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_color_primary"
            android:drawingCacheQuality="auto"
            android:text="Text"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textSize="35sp"
            android:textStyle="bold"
            android:visibility="visible" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>